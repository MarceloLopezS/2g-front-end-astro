---

import App from "../layouts/App/App.astro";
import HeaderAndFooter from "../layouts/HeaderAndFooter/HeaderAndFooter.astro";
import HeroSection from "../shared/ui/HeroSection/HeroSection.astro";
import AboutUs from "../shared/ui/AboutUs/AboutUs.astro";

const META_TITLE = "2G | Servicios Generales"
const META_DESCRIPTION = "Somos 2G SERVICIOS GENERALES S.R.L, una empresa peruana con sede en Cajamarca y dedicada a la ejecución de proyectos de construcción e ingeniería con más de diez años de experiencia en: levantamientos topográficos, movimiento de tierras, saneamiento físico legal de predios, construcción y mantenimiento en interiores y exteriores de edificaciones, trabajos de arco eléctrico y oxicorte, alquiler de maquinaria liviana para construcción y minería, sistemas de rebombeo de aguas superficiales."

---

<App title={META_TITLE} description={META_DESCRIPTION}>
	<HeaderAndFooter>
    <HeroSection />
    <AboutUs />
  </HeaderAndFooter>
</App>